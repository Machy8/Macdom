{
    "name": "machy8/macdom",
    "description": "The best, highly customizable HTML preprocessor with many amazing features.",
    "keywords": ["macdom", "html", "preprocessor", "templating", "minification"],
    "license": "BSD-3-Clause",
    "require": {
        "php": ">=7.0",
        "machy8/xhtml-formatter": "^1.0"
    },
    "require-dev": {
        "nette/tester": "^1.7",
        "tracy/tracy": "^2.4"
    },
    "authors": [
        {
            "name": "Vladimír Macháček",
            "email": "8machy@seznam.cz"
        }
    ],
    "autoload": {
        "classmap": ["src/"]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.0-dev"
        },
        "composer-synchronizer": {
            "nette2": {
                "resources": {
                    "composer-synchronizer-configuration/nette2/": "%configDir%/macdom/"
                },
                "includes": [
                    "macdom/macdom.neon"
                ]
            }
        }
    }
}
